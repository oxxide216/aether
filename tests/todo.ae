(fun add-todo [todos todo]
  (add todos todo))

(fun remove-todo [todos todo-to-remove]
  (set todos (filter (fun [todo] (ne todo todo-to-remove)) todos)))

(fun print-todos [left]
  (if (not (is-empty left))
    (println (head left))
    (print-todos (tail left))))

(let todos [])

(while true
  (print '>> ')

  (let command (split (input) ' '))

  (if (eq (head command) 'add')
    (add-todo todos (head (tail command))))
  (if (eq (head command) 'remove')
    (remove-todo todos (head (tail command))))
  (if (eq (head command) 'list')
    (print-todos todos)))
