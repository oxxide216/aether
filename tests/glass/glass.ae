(use 'std/glass.ae')

(let quad-width 60.0)
(let quad-height 30.0)
(let circle-radius 40.0)

(let init [] ->
  {
    'atom': (glass/load-texture 'tests/glass/atom-icon.jpg')
  }
)

(let event-hanlder [state event] ->
  (if (or (== (get-at event 'type') 'key-press')
          (== (get-at event 'type') 'key-hold'))
    (println (get-at event 'key-code')))
  state)

(let update [state] -> state)

(let render [state] ->
  (glass/clear 0.0 0.0 0.0 1.0)

  (let size (glass/window-size))

  (glass/textured-quad 0.0 0.0 200.0 200.0 (get-at state 'atom'))

  (glass/circle (/ (get-at size 'width') 2.0)
                (/ (get-at size 'height') 2.0)
                circle-radius 1.0 1.0 1.0 1.0)

  (glass/quad (/ (- (get-at size 'width') quad-width) 2.0)
              (/ (- (get-at size 'height') quad-height) 2.0)
              quad-width quad-height 0.7 0.2 0.4 1.0))

(glass/run 'Hello, OpenGL!' 640 480 init event-hanlder update render)
