(use '../std/lib.ae')

(let todos [])

(fun add-todo [todo]
  (set todos (+ todos todo)))

(fun remove-todo [todo-to-remove]
  (set todos (filter (fun [todo] (!= todo todo-to-remove)) todos)))

(fun print-todos [left]
  (if (! (is-empty left))
    (println (head left))
    (print-todos (tail left))))

(while true
  (print '>> ')

  (let command (split (input) ' '))

  (if (& (== (head command) 'add') (! (is-empty (tail command))))
    (add-todo (head (tail command)))
   elif (& (== (head command) 'remove') (! (is-empty (tail command))))
    (remove-todo (head (tail command)))
   elif (== (head command) 'list')
    (print-todos todos)
   else
    (print 'ERROR: `')
    (print (head command))
    (println '`: unknown command')))
