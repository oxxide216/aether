(use 'std/core.ae')
(use 'std/iui.ae')

(let menu-size { 'x': 350.0 'y': 250.0 })

(let main-loop [window-size] ->
  (iui-center window-size menu-size)
  (iui-vbox 0.0 0.0 25.0
    (iui-header 'Label!')
    (iui-input 'Type here...'
      (println content))
    (iui-button 'Click me!'
      (println 'Clicked!'))
    (iui-button 'clickme'
      (println 'clicked'))))

(iui-main-loop 'IUI window' 640 480
  (main-loop window-size))
