(let glass/load-texture [path] -> import 'glass/load-texture')
(let glass/load-font [path] -> import 'glass/load-font')
(let glass/run [title width height init
                event-hanlder update render] -> import 'glass/run')
(let glass/window-size [] -> import 'glass/window-size')

(let glass/text-width [line-height font text] -> import 'glass/text-width')
(let glass/clear [r g b a] -> import 'glass/clear')
(let glass/circle [x y radius r g b a] -> import 'glass/circle')
(let glass/quad [x y width height r g b a] -> import 'glass/quad')
(let glass/texture [x y id] -> import 'glass/texture')
(let glass/textured-quad [x y width height id] -> import 'glass/textured-quad')
(let glass/tile [x y width height u0 v0 u1 v1 id] -> import 'glass/tile')
(let glass/text [x y line-height font text] -> import 'glass/text')
